process {
    errorStrategy = { task.exitStatus in ((130..145) + 104 + 125) ? "retry" : "finish" }
    maxRetries    = 0
    maxErrors     = "-1"

    conda = "conda-env.yml"

    cpus = 1
    memory = 2.GB
    time = 1.h

    withLabel:process_low {
        cpus = 2
        memory = { 8.GB * task.attempt }
        time = { 2.h * task.attempt }
    }
    withLabel:process_medium {
        cpus = { 8 * task.attempt }
        memory = { Math.round(256.GB * task.attempt ** 0.5) }
    }
    withLabel:process_high {
        cpus = { 8 * task.attempt }
        memory = { Math.round(352.GB * task.attempt ** 0.5) }
    }
}

